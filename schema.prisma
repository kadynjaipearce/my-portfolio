datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  slug     String    @unique
  img      String
  title    String
  body     String
  githubUrl String
  websiteUrl String
  createdAt     DateTime  @default(now())
}

model Project {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  slug     String    @unique
  img      String
  title    String
  body     String
  githubUrl     String
  websiteUrl      String
  createdAt     DateTime  @default(now())
}

